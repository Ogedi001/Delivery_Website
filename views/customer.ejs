<%- include('./partials/header') %>
    <title>Customer page</title>
    <link rel="stylesheet" href="/css/customer.css">

    </head>

    <body>

        <header>

            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Delivery Website</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="/home"><i class="fas fa-home"></i> Home</a>
                            </li>

                            <li class="nav-item mr-3">
                                <a class="nav-link" href="/customer/orders"><i class="fas fa-shopping-cart"></i> Order
                                    Now</a>
                            </li>

                            <li class="nav-item mr-3">
                                <a class="nav-link" href="#"><i class="fas fa-truck"></i> Track Order</a>
                            </li>

                            <li class="nav-item mr-3">
                                <a class="nav-link" href="#"><i class="fas fa-life-ring"></i> Supports</a>
                            </li>

                        </ul>
                        <div>
                            <ul class="navbar-nav d-flex align-items-center">
                                <li class="nav-item mr-3">
                                    <div class="d-flex align-items-center">
                                        <a class="nav-link" href="#"><i class="fas fa-user-circle fa-2x"></i></a>
                                        <span class="mb-2 mx-auto">
                                            <%= customer.name %>
                                        </span>
                                    </div>
                                </li>
                                <!-- <li class="nav-item">
                            <a class="nav-link btn btn-dark" href="/customer/signout"><i class="fas fa-sign-in-alt"></i> Log out</a>
                          </li> -->
                                <li class="nav-item">
                                    <label class="h4 switch mr-2">
                                        <input id="switch" type="checkbox" class="me-2">
                                        <span class="slider"></span>
                                    </label>
                                    <span id="light" class="h4 switch"><i class="fas fa-sun"></i></span>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </nav>



        </header>

        <main>
            <div class="row hero">
                <section class="d-flex flex-column align-items-center col-5">
                    <div>
                        <i class="fas fa-user-circle fa-6x"></i>
                    </div>
                    <h1 class="text-center">Hello <%= customer.username %>
                    </h1>
                    <p class="text-center">This is your profile page. You can see all user info, place new orders, track
                        orders by navigating to respective pages, choose payment types, and contact support.</p>
                    <button class="btn btn-outline-primary">Edit Profile</button>

                </section>

                <section class="col">
                        <h2>Delivery Details</h2>
                        <div class="delivery-details">
                            <table class="row">
                              <thead style="background-color: rgb(151, 139, 139);" class="row">
                                <tr>
                                  <th class="col"><strong>My account</strong></th>
                                  <th class="col d-flex " ><button class="btn btn-primary ms-auto">Settings</button></th>
                                </tr>
                              </thead>
                            <tbody>
                                <tr>
                                    <td><strong>User information</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Username:</strong></td>
                                    <td><strong>Email:</strong></td>
                                </tr>
                                <tr>
                                    <td>
                                        <%= customer.name %>
                                    </td>
                                    <td>
                                        <%= customer.email %>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Phone number:</strong></td>
                                    <td><strong>Address:</strong></td>
                                </tr>
                                <tr>
                                    <td>
                                        <%= customer.phoneNumber %>
                                    </td>
                                    <td>
                                        <%= customer.address %>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </section>

            </div>
            <h2>Order History</h2>
            <section class="order-history">

                <div>
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Order Status</th>
                                <th>Payment Status</th>
                                <th>Total Price</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>March 20, 2023</td>
                                <td>Delivered</td>
                                <td>Paid</td>
                                <td>$20.00</td>
                                <td><a href="#">View Details</a></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>March 19, 2023</td>
                                <td>Cancelled</td>
                                <td>Refunded</td>
                                <td>$15.00</td>
                                <td><a href="#">View Details</a></td>
                            </tr>
                            <!-- more order history items -->
                        </tbody>
                    </table>
                </div>
            </section>



            <section class="payment-methods">
                <h2>Payment Methods</h2>
                <ul>
                    <li><strong>Credit Card:</strong> **** **** **** 1234</li>
                    <li><strong>Paypal:</strong> johndoe@example.com</li>
                    <li><a href="#">Manage Payment Methods</a></li>
                </ul>
            </section>

            <section class="support">
                <h2>Support</h2>
                <p>For any questions or issues, please contact our support team:</p>
                <ul>
                    <li><strong>Phone:</strong> (123) 456-7890</li>
                    <li><strong>Email:</strong> support@myapp.com</li>
                </ul>
            </section>
        </main>
        <%- include('./partials/footer') %>

    </body>

    </html>
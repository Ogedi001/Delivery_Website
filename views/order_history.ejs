<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <!-- https://cdnjs.com/libraries/twitter-bootstrap/5.0.0-beta1 -->
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/css/bootstrap.min.css" />

    <!-- Icons: https://getbootstrap.com/docs/5.0/extend/icons/ -->
    <!-- https://cdnjs.com/libraries/font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />


    <style>
        th,
        td {
            border-right: 1px solid black;
            padding: 5px;
        }

        th:last-child,
        td:last-child {
            border-right: none;
        }
    </style>
</head>

<body class="d-flex flex-column align-items-center">
    <div class="logo justify-content-center d-flex align-items-center">
        <img src="logo.png" alt="logo">
        <h2>Welcome <%= customer.username %>! to your order history
        </h2>
    </div>

    <div class="order-history">

        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th> Date</th>
                    <th>Item ordered</th>
                    <th>Total Amount</th>
                    <th>Order Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(function(order) { %>
                    <tr>
                        <td>
                            <%= order.orderNumber %>
                        </td>
                        <td>
                            <%= order.orderDate %>
                        </td>
                        <td>
                            <%= order.itemType%>
                        </td>
                        <td>
                            <%= order.OrderAmount %>
                        </td>
                        <td>
                            <%= order.orderStatus %>
                        </td>
                        <td>
                            <a href="/customer/order?id=<%= order._id %>" class="btn btn-outline-primary">
                                <i class="fa fa-arrow-circle-right" aria-hidden="true"></i> View Details
                            </a>
                        </td>



                        <td>

                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                data-bs-target="#exampleModalCenter">
                                <i class="fas fa-trash"></i> Delete
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <h4>
                                                <%= customer.username %>
                                            </h4>
                                            Do you want to delete this order history
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-outline-danger"
                                                onclick="deleteOrder('<%= order._id %>')">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>

                    </tr>
                    <% }); %>

            </tbody>
        </table>
        <div>
            <div>
                <a href="/customer/orders" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-1"></i> Go back to orders
                </a>
            </div>



            <script
                src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta1/js/bootstrap.bundle.min.js"></script>
            <script>
                const deleteOrder = async (id) => {
                    let url = '/order/delete?id=' + id
                    const response = await fetch(url, {
                        method: 'DELETE',
                    })
                    const results = await response.json()
                    console.log(results)
                    window.location.reload()
                }
            </script>
</body>

</html>
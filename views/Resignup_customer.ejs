<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Sign-up</title>
  <link rel="stylesheet" href="./css/signup_customer.css">
</head>
<body>
  <h1>Customer Sign-up</h1>
  <form action="/signup/customer" method="POST">
    <div>
      <label for="username">Username:</label>
      <input type="text" name="username" id="username" class="<%= errors.username ? 'error' : '' %>" value="<%= username %>" />
      <% if (errors.username) { %>
        <span class="error-text"><%= errors.username %></span>
      <% } %>
    </div>
    
    <div>
      <label for="name">Full Name:</label>
      <input type="text" id="name" name="name" required><br>
    </div>
    <% if (errors && errors.username) { %>
      <div class="alert alert-danger" role="alert">
     <%= errors.username %>
    <% } %></h4>

    
    <div>
      <label for="email">Email:</label>
      <input type="email" name="email" id="email" class="<%= errors.email ? 'error' : '' %>" value="<%= email %>" />
      <% if (errors.email) { %>
        <span class="error-text"><%= errors.email %></span>
      <% } %>
    </div>
    <div>
      <label for="phone">Phone Number:</label>
      <input type="text" name="phoneNumber" id="phone" class="<%= errors.phoneNumber ? 'error' : '' %>" value="<%= phoneNumber %>" />
      <% if (errors.phoneNumber) { %>
        <span class="error-text"><%= errors.phoneNumber %></span>
      <% } %>
    </div>
    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" minlength="8" required><br>
    </div>
  
    <div>
      <label for="confirm-password">Confirm Password:</label>
      <input type="password" id="confirm-password" name="passwordConfirmation" minlength="8" required><br>
    </div>
  
    <div>
      <label for="address">Address:</label>
      <input type="text" id="address" name="address" required><br>
    </div>
  
    <input type="submit" value="Create Account">
  </form>
  
</body>
</html>

<%- include('./partials/header') %>
  <title>Customer Sign-up</title>
  <link rel="stylesheet" href="/css/signup_customer.css">
  <style>

  </style>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            Delivery Website
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav mx-auto">
              <li class="nav-item mr-3">
                <a class="nav-link" href="#"><i class="fas fa-home"></i> Home</a>
              </li>
              <li class="nav-item mr-3">
                <a class="nav-link" href="#"><i class="fas fa-user"></i> Profile</a>
              </li>
              <li class="nav-item mr-3">
                <a class="nav-link" href="#"><i class="fas fa-info-circle"></i> About Us</a>
              </li>
              <li class="nav-item mr-3">
                <a class="nav-link" href="#"><i class="fas fa-question-circle"></i> FAQ</a>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <div class="dropdown">
                  <a class="btn btn-dark dropdown-toggle" href="#" role="button" id="dropdownID"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-plus"></i> Sign Up
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="dropdownID">
                    <li><a class="dropdown-item" href="/signup/rider" name="signup" value="rider"><i
                          class="fas fa-motorcycle"></i> Rider Agent</a></li>

                  </ul>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link btn btn-dark" href="/login"><i class="fas fa-sign-in-alt"></i>
                  Login</a>
              </li>
              <li class="nav-item">
                <label class="h4 switch">
                  <input id="switch" type="checkbox" class="me-2">
                  <span class="slider"></span>
                </label>
                <span id="light" class="h4 switch"><i class="fas fa-sun"></i></span>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    </header>


    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="col-md-5">
          <h1 class="text-center mt-5 mb-2">Customer Sign-up</h1>

          <%= console.log(invalidErrors) %>
            <form action="/signup/customer" method="POST" class="">
              <div class="form-floating mb-3">
                <input type="text" name="username" id="username"
                  value="<%= value && value.username ? value.username : '' %>" class="form-control"
                  placeholder="Valid characters e.g example_11" required autocomplete="off">
                <label for="username">Username</label>
                <span id="errorMsg">
                  <%= errors && errors.username ? errors.username : '' %>
                </span>
                <span id="errorMsg">
                  <%= invalidErrors && invalidErrors.username ? invalidErrors.username : '' %>
                </span>
              </div>

              <div class="form-floating mb-3">
                <input type="text" id="name" name="name" value="<%= value && value.name ? value.name : '' %>"
                  class="form-control" placeholder="Enter your full name" required autocomplete="off">
                <label for="name">Full Name</label>
              </div>

              <div class="form-floating mb-3">
                <input type="email" name="email" id="email" value="<%= value && value.email ? value.email : '' %>"
                  class="form-control" placeholder="e.g email.example.com" required autocomplete="off">
                <label for="email">Email</label>
                <span id="errorMsg">
                  <%= errors && errors.email ? errors.email : '' %>
                </span>
                <span id="errorMsg">
                  <%= invalidErrors && invalidErrors.email ? invalidErrors.email : '' %>
                </span>
              </div>

              <div class="form-floating mb-3">
                <input type="text" name="phoneNumber" id="phone"
                  value="<%= value && value.phoneNumber ? value.phoneNumber : '' %>" class="form-control"
                  placeholder="Valid Nigerian No. e.g 08123456789" required autocomplete="off">
                <label for="phone">Phone Number</label>
                <span id="errorMsg">
                  <%= errors && errors.phoneNumber ? errors.phoneNumber : '' %>
                </span>
                <span id="errorMsg">
                  <%= invalidErrors && invalidErrors.phoneNumber ? invalidErrors.phoneNumber : '' %>
                </span>
              </div>

              <div class="form-floating mb-3">
                <input type="password" id="password" name="password" minlength="8"
                  value="<%= value && value.password ? value.password : '' %>" class="form-control"
                  placeholder="Enter your password" required>
                <label for="password">Password</label>
                <span id="errorMsg">
                  <%= invalidErrors && invalidErrors.password ? invalidErrors.password : '' %>
                </span>
                <span class="password-toggle-icon" value="1">
                  <i class="fas fa-eye"></i>
                </span>
              </div>



              <div class="form-floating mb-3">
                <input type="password" id="confirm-password" name="passwordConfirmation" minlength="8"
                  class="form-control" placeholder="Confirm your password">
                <label for="confirm-password">Confirm Password</label>

                <%- passwordMSG ? `<span id="errorMsg">${passwordMSG}</span>` : '' %>
                  <span class="password-toggle-icon">
                    <i class="fas fa-eye"></i>
                  </span>
              </div>

              <div class="form-floating mb-3">
                <input type="text" id="address" name="address"
                  value="<%= value && value.address ? value.address : '' %>" class="form-control"
                  placeholder="Enter your address" required autocomplete="off">
                <label for="address">Address</label>
              </div>
              <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                  Remember Me
                </label>
              </div>


              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-success text-center"><i class="fas fa-user-plus"></i>
                  Create Account</button>
                <a class="nav-link btn btn-outline-dark" href="/login"><i class="fas fa-sign-in-alt"></i>
                  Login</a>
              </div>
            </form>
        </div>
      </div>
    </div>
    <%- include('./partials/footer') %>
      <script src="/jscript/signup_customer.js"></script>
  </body>

  </html>